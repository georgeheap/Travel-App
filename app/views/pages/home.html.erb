<div class="row">
  <div class="col-md-12">
    <div class="home-jumbotron">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
          <div class="item active">
            <img id="cornwall " src="/assets/Cornwall.jpg" alt="Cornwall">
          </div>
          <div class="item">
            <img id="brazil" src="/assets/Brazil-002.jpg" alt="Rio De Janeiro">
          </div>
          <div class="item">
            <img id="iceland" src="/assets/Iceland-002.jpg" alt="Iceland">
          </div>
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
      <div class="home-jumbotron-text">
        <% unless user_signed_in? %>
          <h1>SIGN UP TODAY!</h1>
          <%= link_to new_user_registration_path do %>
            <p>REGISTER</p>
          <% end %>
        <% else %>
          <h1>Welcome, <%= current_user.username.capitalize %>!<h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
     $("#myCarousel").carousel({
         interval : 3000,
         pause: false
     });
});
</script>
