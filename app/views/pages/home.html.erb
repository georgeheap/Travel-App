<div class="row">
  <div class="col-md-12">
    <div class="home-jumbotron">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
          <div class="item active">
            <img id="cornwall " src="/assets/Cornwall.jpg" alt="Cornwall">
          </div>
          <div class="item">
            <img id="hawaii" src="/assets/Hawaii-16-2.jpg" alt="Kauai, Hawaii">
          </div>
          <div class="item">
            <img id="sydney" src="/assets/Sydney-5.jpg" alt="Sydney">
          </div>
          <div class="item">
            <img id="niagra" src="/assets/Niagara-3.jpg" alt="Niagara Falls">
          </div>
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
      <div class="home-jumbotron-text">
        <% unless user_signed_in? %>
          <h2>FIND AMAZING ADVENTURES!</h2>
          <%= link_to new_user_registration_path do %>
            <p>REGISTER</p>
          <% end %>
        <% else %>
          <h2>Welcome, <%= current_user.username.capitalize %>!<h2>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="main">
  <div class="row">
    <div class="col-md-12">
      <div class="home-featured-destinations">
        <h2 class="feat">FEATURED DESTINATIONS</h2>
        <div class="row">
          <div class="feat-dest">
            <% @destinations.each do |destination| %>
              <div class="feature-dest col-md-3 col-sm-12">
                <div class="destinations">
                  <%= link_to image_tag("#{destination.default_img}", alt:"#{destination.name}", class: "dest_img"), destination %>
                  <p><%= destination.description %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
     $("#myCarousel").carousel({
         interval : 3000,
         pause: false
     });
});
</script>
